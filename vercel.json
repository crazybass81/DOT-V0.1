{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps && cd frontend && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "frontend/build",
  "framework": null,
  "functions": {
    "api/backend.js": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "nodejs20.x",
      "includeFiles": "backend/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/api/backend"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/backend"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "/api/v1",
    "REACT_APP_SOCKET_URL": "/",
    "DISABLE_NEW_JSX_TRANSFORM": "true"
  },
  "build": {
    "env": {
      "SKIP_PREFLIGHT_CHECK": "true",
      "GENERATE_SOURCEMAP": "false",
      "INLINE_RUNTIME_CHUNK": "false",
      "DISABLE_NEW_JSX_TRANSFORM": "true",
      "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
    }
  },
  "regions": ["icn1"],
  "public": true,
  "installCommand": "npm install --legacy-peer-deps && cd frontend && npm install --legacy-peer-deps && cd ../backend && npm install"
}