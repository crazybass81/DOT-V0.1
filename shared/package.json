{
  "name": "dot-platform-shared",
  "version": "0.1.0",
  "description": "DOT Platform Shared - 공통 타입 정의 및 유틸리티 라이브러리",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "shared",
    "types",
    "constants",
    "dot",
    "platform",
    "typescript",
    "utilities"
  ],
  "author": "DOT Team",
  "license": "MIT",
  "dependencies": {
    "joi": "^17.10.0",
    "moment": "^2.30.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.5.6",
    "@types/lodash": "^4.14.202",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ]
  },
  "files": [
    "dist/**/*",
    "types/",
    "constants/",
    "contracts/",
    "package.json",
    "README.md"
  ]
}