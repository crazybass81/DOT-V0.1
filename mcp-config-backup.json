{
  "mcpServers": {
    "filesystem": {
      "command": "node",
      "args": ["/home/ec2-user/.config/mcp-servers/mcp-servers-official/src/filesystem/dist/index.js"],
      "env": {
        "ALLOWED_DIRECTORIES": "/home/ec2-user/DOT-V0.1,/home/ec2-user/.claude,/home/ec2-user/projects"
      },
      "description": "파일 시스템 접근 및 프로젝트 관리"
    },
    "sequential-thinking": {
      "command": "node",
      "args": ["/home/ec2-user/.config/mcp-servers/mcp-servers-official/src/sequentialthinking/dist/index.js"],
      "description": "복잡한 분석 및 체계적 문제 해결"
    },
    "memory": {
      "command": "node",
      "args": ["/home/ec2-user/.config/mcp-servers/mcp-servers-vercel/src/memory/dist/index.js"],
      "description": "세션 메모리 및 프로젝트 컨텍스트 유지"
    },
    "playwright": {
      "command": "node",
      "args": ["/home/ec2-user/.config/mcp-servers/playwright-mcp/dist/index.js"],
      "env": {
        "BROWSER": "chromium"
      },
      "description": "브라우저 자동화 및 E2E 테스트"
    },
    "tavily": {
      "command": "npx",
      "args": ["-y", "tavily-mcp"],
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      },
      "description": "웹 검색 및 크롤링"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub 작업 - PR, Issues, Commits"
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-vercel"],
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      },
      "description": "Vercel 배포 및 문서"
    },
    "magic": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-magic"],
      "env": {
        "MAGIC_API_KEY": "${MAGIC_API_KEY}"
      },
      "description": "UI 컴포넌트 생성 및 디자인 시스템"
    },
    "morphllm": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-morphllm"],
      "env": {
        "MORPHLLM_API_KEY": "${MORPHLLM_API_KEY}"
      },
      "description": "코드 편집 및 리팩토링"
    },
    "ide": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-vscode"],
      "description": "VS Code IDE 통합"
    }
  }
}