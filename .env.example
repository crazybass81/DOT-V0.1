# DOT Platform 환경 변수 템플릿
# 이 파일을 .env로 복사하고 실제 값으로 채우세요

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=dot_platform

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT
JWT_SECRET=your_jwt_secret_key_change_this
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this

# Application
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://dot-platform.vercel.app

# Email (선택사항)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Monitoring (선택사항)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# AWS (EC2 배포시)
EC2_HOST=your.ec2.ip.address
EC2_USER=ubuntu
EC2_SSH_KEY_PATH=~/.ssh/your-key.pem