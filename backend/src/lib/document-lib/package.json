{
  "name": "document-lib",
  "version": "0.1.0",
  "description": "DOT Platform 문서 관리 라이브러리 - 파일 업로드, 다운로드, 메타데이터 관리",
  "main": "index.js",
  "bin": {
    "document-lib": "./cli.js"
  },
  "scripts": {
    "test": "jest tests/",
    "test:watch": "jest tests/ --watch",
    "test:coverage": "jest tests/ --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "start": "node cli.js",
    "dev": "nodemon cli.js"
  },
  "dependencies": {
    "multer": "^1.4.5-lts.1",
    "file-type": "^18.7.0",
    "mime-types": "^2.1.35",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "fs-extra": "^11.1.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "document",
    "file-upload",
    "file-download",
    "metadata",
    "storage",
    "korean"
  ],
  "author": "DOT Platform Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  }
}